<h2>Lent Books</h2>
<table class='table table-striped'>
  <thead>
    <tr>
      <th class='col-md-3'><%= Book.human_attribute_name(:title) %></th>
      <th class='col-md-3'><%= Book.human_attribute_name(:author) %></th>
      <th class='col-md-6'><%= Book.human_attribute_name(:borrower) %></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.borrower_full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
